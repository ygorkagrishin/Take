@import 'fonts/fonts.styl';
@import 'var/var.styl';
@import 'layout/layout.styl';

.section__title
    margin-bottom: 60px;
    font: 35px / 1 openLight;

.hero
    position: relative;
    background: url( 'image/hero/heroBg.png' ) no-repeat bottom / cover;

.hero__header
    padding: 56px 0;

@import 'comp/logo.styl';

.hero__main
    padding: 24.5% 0 32.3% 0;

.hero__helper
    max-width 470px;

.hero__title
    margin-bottom: 24px;
    font-size: 60px;
    color: #fff;

.hero__text
    font-family: openLight;
    color: #fff;

.hero__pic_iphone
    position: absolute;
    bottom: -27.5%;
    right: 15%;

.some
    overflow-x: hidden;

.some__inner
    padding-top: 109px;

.some__title
    margin-bottom: 30px;

.some__text
    display: inline-block;
    width: 50%;
    vertical-align: top;
    p
        margin-bottom: 24px;
    &:last-child
        padding-left: 14px;
        margin-top: 98px;

.some-box
    max-width 1600px;
    padding-top: 56px;
    margin: 0 auto;

.some-box__table
    transform: translateX(216px);
    transition: all .7s;
    will-change: transform;
    &:hover
        transform: translateX(0);

.some-box__table::after
    content: '';
    display: block;
    clear: both;

.some-box__cell
    float: left;
    padding: 46px 32px 55px 40px;
    color: #fff;
    &:nth-child(1)
        background-color: primaryPeachy;
    &:nth-child(2)
        background-color: primaryBlue;
    &:nth-child(3)
        background: url( 'image/box/Layer-6.png' ) no-repeat center / cover;
    &:nth-child(4)
        background-color: primaryMagenta;
    &:nth-child(5)
        background: url( 'image/box/Layer-5.png' ) no-repeat center / cover;
    &:nth-child(6)
        background-color: primaryGreen;
    &:nth-child(7)
        background: url( 'image/box/Layer-14.png' ) no-repeat top / cover;

.some-box__cell_small
    max-width 25%;

.some-box__cell_large
    max-width 50%;
    padding: 46px 270px 55px 40px;
    .some-box__text
        margin-bottom: 53px;

.some-box__title
    @extend .section__title;
    margin-bottom: 22px;
    font-size: 30px;
    white-space: nowrap;

.some-box__text
    margin-bottom: 29px;

.some-box__link
    font: 14px / 24px openBold;
    color: #fff;
    & > i 
        margin-left: 14px;
    
.detail__inner
    padding: 92px 0;

.detail__item
    display: inline-block;
    max-width 23%;
    padding-bottom: 63px;
    vertical-align: top;
    &:not(:last-child)
        margin-right: 2.5%;

.detail-item__title
    margin-bottom: 16px;
    font: 13px / 24px openSemiBold;

.power
    background: url( 'image/power/powerBg.png' ) no-repeat center / cover;

.power__inner
    padding: 24.5% 0 7.2% 0;

.power__cont
    max-width 520px;

.power__title
    margin-bottom: 22px;
    font-size: 60px;
    line-height: 72px;
    color: #fff;

.power__text
    padding-right: 32px;
    margin-bottom: 16px;

.power__text 
    color: #fff;

.power__options
    display: inline-block;
    font-family: openBold;
    color: #fff;
    & > i 
        display: inline-block;
        margin-left: 20px;

.color
    background-color: primaryGreen;

.color__inner
    padding: 120px 0;

.color__title
    color: #fff;

.color__item
    display: inline-block;
    max-width 31.6%;
    padding-bottom: 41px;
    vertical-align: top;
    &:not(:last-child)
        margin-right: 2.5%;

.color-item__title
    @extend .detail-item__title;
    color: #fff;

.color-item__text
    color: #fff;

.buy__inner
    padding: 104px 0 145px 0;
    background-color: lightGrey;

.buy__prod
    max-width 48.6%;
    display: inline-block;
    padding: 45px 72px 52px 54px;
    &:not(:last-child)
        margin-right: 2.5%;

.buy__must-popular
    background-color: #fff;

.buy-prod__meta
    display: inline-block;
    padding: 7px 14px 8px 14px;
    font: 11px / 1 openBold;
    text-transform: uppercase;
    color: #fff;
    background-color: #e1e1e1;
    border-radius: 5px;

.buy__must-popular
    .buy-prod__meta
        background-color: primaryMagenta;

.buy-prod__title
    margin: 15px 0;
    font: 30px / 36px openLight;

.buy-prod__desc
    color: gentlyBlue;

.buy-prod__desc
    margin-bottom: 24px;

.buy-prod__btn
    display: inline-block;
    padding: 12px 27px 12px 27px;
    font: 13px / 22px openBold;
    text-transform: uppercase;
    word-spacing: 5px;
    color: #fff;
    background-color: primaryGreen;
    border-radius: 5px;

.buy-prod__platform
    padding: 0 4px;
    margin-top: 20px;
    & > i 
        display: inline-block;
        font-size: 24px;
        color: primaryGrey;
        &:not(:last-child)
            margin-right: 12px;

@import 'comp/footer.styl';
    